{
  "name": "xz-ui-lib",
  "version": "1.0.0",
  "description": "A Vue 3 component library with TS support",
  "keywords": [
    "vue",
    "components",
    "element-plus",
    "typescript"
  ],
  "author": "xxzz <zjh1750181817@163.com>",
  "license": "MIT",
  "type": "module",
  "main": "./dist/xz-ui-lib.cjs",
  "module": "./dist/xz-ui-lib.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/xz-ui-lib.js"
      },
      "require": {
        "types": "./dist/index.d.ts",
        "default": "./dist/xz-ui-lib.cjs"
      }
    },
    "./components/*": {
      "import": {
        "types": "./dist/components/*.d.ts",
        "default": "./dist/components/*.js"
      }
    },
    "./composables/*": {
      "import": {
        "types": "./dist/composables/*.d.ts",
        "default": "./dist/composables/*.js"
      }
    },
    "./utils/*": {
      "import": {
        "types": "./dist/utils/*.d.ts",
        "default": "./dist/utils/*.js"
      }
    },
    "./style.css": "./dist/style.css"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "vite build",
    "dev": "vite build --watch",
    "docs:dev": "vitepress dev docs --port=1000",
    "docs:build-api": "node scripts/build-docs-api.mjs",
    "docs:build-class": "node scripts/build-docs-class.mjs",
    "docs:build-components": "node scripts/build-docs-components.mjs",
    "docs:build-composables": "node scripts/build-docs-composables.mjs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs",
    "docs:deploy": "gh-pages -d docs/.vitepress/dist"
  },
  "peerDependencies": {
    "element-plus": ">=2.7.0 <3.0.0",
    "vue": ">=3.4.0 <4.0.0"
  },
  "devDependencies": {
    "@types/node": "^25.0.3",
    "@vitejs/plugin-vue": "^5.0.0",
    "@volar/vue-language-core": "^1.6.5",
    "element-plus": "^2.7.0",
    "gh-pages": "^6.3.0",
    "glob": "^13.0.0",
    "sass": "^1.77.0",
    "typedoc": "^0.28.15",
    "typedoc-plugin-markdown": "^4.9.0",
    "typescript": "^5.4.0",
    "vite": "^5.2.0",
    "vite-plugin-dts": "^3.8.0",
    "vitepress": "^1.6.4",
    "vue": "^3.4.0",
    "vue-component-meta": "^1.8.27"
  }
}
